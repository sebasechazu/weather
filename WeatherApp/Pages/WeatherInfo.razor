@using WeatherApp.Models;

@if (weatherData != null)
{
    <div class="card" style="width: 18rem;">
        <h3>@weatherData.Name</h3>
        <p>Temperatura: @weatherData.Temperature °C</p>
        <p>Humedad: @weatherData.Humidity %</p>
        <p>Descripción: @weatherData.Description</p>
        <p></p>
        <i class="wi @GetWeatherIconClass(weatherData.icon)"></i>

    </div>
}

@code {
    [Parameter]
    public WeatherData? weatherData { get; set; }
 private string GetWeatherIconClass(string description)
    {
        switch (description.ToLower())
        {
            case "clear":
                return "wi-day-sunny";
            case "clouds":
                return "wi-cloudy";
            case "rain":
                return "wi-rain";
            case "thunderstorm":
                return "wi-thunderstorm";
            case "snow":
                return "wi-snow";
            default:
                return "wi-day-cloudy";
        }
    }
}

